<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="kasiabadio">

        <createTable tableName="Knowledge">
            <column name="id_knowledge" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="VARCHAR(40000)">
                <constraints nullable="true"/>
            </column>
            <column name="created_date" type="DATETIME">
                <constraints nullable="true"/>
            </column>
            <column name="last_modified_date" type="DATETIME">
                <constraints nullable="true"/>
            </column>
            <column name="author" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="Category">
            <column name="id_category" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="category_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="2" author="kasiabadio">
        <createTable tableName="CategoryKnowledgeGroup">
            <column name="group_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="id_category" type="BIGINT">
                <constraints nullable="false" foreignKeyName="id_category" references="Category(id_category)"/>
            </column>
            <column name="id_knowledge" type="BIGINT">
                <constraints nullable="false" foreignKeyName="id_knowledge" references="Knowledge(id_knowledge)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>